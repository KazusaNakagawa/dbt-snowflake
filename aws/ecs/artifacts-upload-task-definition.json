{
  "family": "dbt-artifacts-upload-task",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/dbtTaskRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "dbt-artifacts-uploader",
      "image": "${ECR_REPOSITORY_URI}:latest",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dbt-artifacts",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "artifacts",
          "awslogs-create-group": "true"
        }
      },
      "environment": [
        {
          "name": "S3_BUCKET",
          "value": "${ARTIFACTS_BUCKET_NAME}"
        },
        {
          "name": "S3_PREFIX",
          "value": "dbt-artifacts/${ENVIRONMENT}"
        }
      ],
      "command": [
        "/bin/bash", 
        "-c", 
        "aws s3 cp /usr/src/app/dbt/target/manifest.json s3://${ARTIFACTS_BUCKET_NAME}/dbt-artifacts/${ENVIRONMENT}/manifest.json && aws s3 cp /usr/src/app/dbt/target/run_results.json s3://${ARTIFACTS_BUCKET_NAME}/dbt-artifacts/${ENVIRONMENT}/run_results.json && aws s3 cp /usr/src/app/dbt/target/catalog.json s3://${ARTIFACTS_BUCKET_NAME}/dbt-artifacts/${ENVIRONMENT}/catalog.json"
      ],
      "cpu": 256,
      "memory": 512
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "tags": [
    {
      "key": "Project",
      "value": "dbt-snowflake"
    },
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    }
  ]
}