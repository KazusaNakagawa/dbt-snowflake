{
  "family": "dbt-task",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/dbtTaskRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "dbt-container",
      "image": "${ECR_REPOSITORY_URI}:latest",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dbt-tasks",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "dbt",
          "awslogs-create-group": "true"
        }
      },
      "environment": [
        {
          "name": "DBT_PROFILES_DIR",
          "value": "/usr/src/app/dbt/profiles"
        }
      ],
      "secrets": [
        {
          "name": "DBT_SNOWFLAKE_ACCOUNT",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/account"
        },
        {
          "name": "DBT_SNOWFLAKE_USER",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/user"
        },
        {
          "name": "DBT_SNOWFLAKE_PASSWORD",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/password"
        },
        {
          "name": "DBT_SNOWFLAKE_ROLE",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/role"
        },
        {
          "name": "DBT_SNOWFLAKE_DATABASE",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/database"
        },
        {
          "name": "DBT_SNOWFLAKE_WAREHOUSE",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/warehouse"
        },
        {
          "name": "DBT_SNOWFLAKE_SCHEMA",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT}:parameter/dbt/snowflake/schema"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "dbt --version || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 5
      },
      "cpu": 1024,
      "memory": 2048,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 2048,
          "hardLimit": 4096
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",
  "tags": [
    {
      "key": "Project",
      "value": "dbt-snowflake"
    },
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    }
  ],
  "ephemeralStorage": {
    "sizeInGiB": 21
  },
  "propagateTags": "TASK_DEFINITION"
}
